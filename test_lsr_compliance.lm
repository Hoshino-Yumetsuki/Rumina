// LSR-000 语法规范符合性测试

print("=== LSR-000 Compliance Test ===");
print("");

// 1. 测试运算符优先级
print("1. Testing operator precedence:");
print("   Testing: 1 == 1 && 2 > 1");
var test1 = 1 == 1 && 2 > 1;
assert(test1 == true, "Operator precedence test 1 failed");
print("   PASS: 1 == 1 && 2 > 1 =", test1);

print("   Testing: (5 > 3) == true");
var test2 = (5 > 3) == true;
assert(test2 == true, "Operator precedence test 2 failed");
print("   PASS: (5 > 3) == true =", test2);

print("   Testing: 2 + 3 * 4 (should be 14)");
var test3 = 2 + 3 * 4;
assert(test3 == 14, "Arithmetic precedence failed");
print("   PASS: 2 + 3 * 4 =", test3);
print("");

// 2. 测试assert函数
print("2. Testing assert function:");
assert(true);
print("   PASS: assert(true)");
assert(1 + 1 == 2, "Math should work");
print("   PASS: assert(1 + 1 == 2)");
print("");

// 3. 测试for循环
print("3. Testing for loop:");
var sum = 0;
for (var i = 1; i <= 5; i = i + 1) {
    sum = sum + i;
}
assert(sum == 15, "For loop sum should be 15");
print("   PASS: for loop sum(1..5) =", sum);
print("");

// 4. 测试精确数学
print("4. Testing exact mathematics:");
var rational = 1/3 + 2/3;
print("   1/3 + 2/3 =", rational);
assert(rational == 1/1, "Rational math should be exact");
print("   PASS: Rational arithmetic is exact");
print("");

// 5. 测试数据类型
print("5. Testing data types:");
var int_val = 42;
var float_val = 3.14;
var bool_val = true;
var string_val = "Hello";
var null_val = null;
var array_val = [1, 2, 3];
print("   int:", int_val);
print("   float:", float_val);
print("   bool:", bool_val);
print("   string:", string_val);
print("   null:", null_val);
print("   array:", array_val);
print("   PASS: All basic types supported");
print("");

// 6. 测试控制结构
print("6. Testing control structures:");
var if_result = 0;
if (true) {
    if_result = 1;
}
assert(if_result == 1, "If statement failed");
print("   PASS: if statement");

var while_count = 0;
var i = 0;
while (i < 3) {
    while_count = while_count + 1;
    i = i + 1;
}
assert(while_count == 3, "While loop failed");
print("   PASS: while loop");

var for_count = 0;
for (var j = 0; j < 3; j = j + 1) {
    for_count = for_count + 1;
}
assert(for_count == 3, "For loop failed");
print("   PASS: for loop");
print("");

// 7. 测试注释（单行和多行）
/* This is a
   multiline comment */
// This is a single line comment
print("7. Testing comments:");
print("   PASS: Single-line and multi-line comments work");
print("");

print("=== All LSR-000 Compliance Tests Passed! ===");
