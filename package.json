{
  "name": "rumina",
  "description": "Lamina language compatible interpreter written in rust",
  "version": "1.2.0-beta.1",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "type": "module",
  "license": "LGPL-2.1",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "packageManager": "yarn@4.11.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^24.10.0",
    "rimraf": "^6.1.0",
    "rolldown": "1.0.0-beta.47",
    "rolldown-plugin-dts": "^0.17.4",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "lamina",
    "wasm",
    "webassembly",
    "math",
    "calculator",
    "rational",
    "bigint",
    "symbolic",
    "exact-math",
    "numerical-computing",
    "rumina"
  ],
  "scripts": {
    "build": "wasm-pack build --out-dir lib && yarn postbuild && node scripts/sync-wasm-bindings.js && rolldown -c rolldown.config.js",
    "postbuild": "rimraf lib/.gitignore lib/README.md lib/package.json lib/LICENSE",
    "lint": "biome check && biome lint",
    "lint-fix": "biome format --write && biome lint --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hoshino-Yumetsuki/Rumina.git"
  },
  "bugs": {
    "url": "https://github.com/Hoshino-Yumetsuki/Rumina/issues"
  },
  "homepage": "https://github.com/Hoshino-Yumetsuki/Rumina#readme"
}
